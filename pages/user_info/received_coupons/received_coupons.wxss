.coupon-content {
    width: 100%;
    background-color: white;
    padding-top: 38rpx;
    overflow: hidden;
}
.coupon-content > view {
    width: 690rpx;
    height: 213rpx;
    border-radius: 15rpx;
    margin:0 auto;
    margin-bottom: 38rpx;
    overflow: hidden;
}
.green-coupon {
    color: #47C1C4;
    border: 1rpx solid  #47C1C4;
    background-color: #47C1C4;

}
.red-coupon {
    color: #F46366;
    border: 1rpx solid  #F46366;
    background-color: #F46366;
}
.cant-be-used .green-coupon,.cant-be-used .red-coupon{
    color: #CCCCCC !important;
    border: 1rpx solid  #CCCCCC !important;
    background-color: #CCCCCC !important;
}
.coupon-time-range {
    width: 100%;
    height: 62rpx;
    overflow: hidden;
}
.coupon-time-range > text {
    color: white;
    font-size:24rpx;
    line-height:62rpx;
    display: block;
}
.coupon-time-range > text:nth-child(1) {
    float: left;
    margin-left: 25rpx;
}
.coupon-time-range > text:nth-child(2) {
    float: right;
    margin-right: 25rpx;
}
.coupon-info {
    width: 100%;
    height: 90rpx;
    background-color: white;
    padding: 30rpx 0;
    font-size: 24rpx;
}
.coupon-info > .coupon-info-left {
    width: 80rpx;
    float: left;
    line-height: 90rpx;
    margin-left: 26rpx;
}
.coupon-info-left > text {
    font-size: 45rpx;
}
.coupon-info > .coupon-info-right {
    width: 300rpx;
    float: left;
    line-height: 45rpx;
    margin-left: 90rpx;
}
.coupon-info-right > text {
    text-align: center;
    display: block;
}


.empty-coupon {
    width: 345rpx;
    margin: 0 auto;
    margin-top: 130rpx;
}
.serch-icon-wrap {
    width: 178rpx;
    height: 178rpx;
    background-color: #D6D5DA;
    border: 1rpx solid #CDCCD1;
    border-radius: 50%;
    margin: 0 auto;
    overflow: hidden;
}
.serch-icon-wrap > icon {
    display: block;
    margin: 46rpx;
}
.empty-coupon > text:nth-child(2) {
    width:100%;
    display:block;
    text-align:center;
    margin-top:27rpx;
}
button {
    width:190rpx;
    height:58rpx;
    font-size:24rpx;
    font-weight:600;
    letter-spacing:2px;
    margin-top:30rpx;
}


